			<div class="freeMp3">+ free mp3</div>
			{{/if}}
		</a>
		<div class="author"><a href="filter.html?{{this.author}}">{{this.author}}</a></div>
		<div class="title smb"><a href="details.html{{this.title}}">{{this.title}}</a></div>
		<div class="releases">
		{{#each this.releases}}
			<div class="release">
				<a class="buyLink" href="buy.html"> <span class="type">{{this.type}}</span> <span class="price">{{this.price}}â‚¬</span> <span class="xsml" href="buy.html"><span class="textDescription">Add to cart</span></span></a>

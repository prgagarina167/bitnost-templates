<div class="item-list">
 {{#each this}}
 <div class="item">
 		<div class="cover smb">
	 		<a href="release.html">
			<img src="{{this.cover}}" width=225 height=225 />
			</a>
			{{#if this.asFreeMp3}}
			<div class="freeMp3">+ free mp3</div>
			{{/if}}
			<div class="actionButtons lmt">
				<a class="btn btn-primary xsmb detailsBtn" href="release.html">view details</a>
			</div>
		</div>
		<div class="author"><a href="filter.html?{{this.author}}">{{this.author}}</a></div>
		<div class="title smb"><a href="release.html">{{this.title}}</a></div>
		<div class="releases">
		{{#each this.releases}}
			<div class="release">
					<span class="type">{{this.type}}</span>
					<span class="price">{{this.price}}â‚¬</span>
					<a class="buyLink textDescription btn btn-default btn-xs xsmb xsml" href="buy.html" >buy</a>
			</div>
		{{/each}}
		</div>
	
	</div>
	{{/each}}
	
</div>